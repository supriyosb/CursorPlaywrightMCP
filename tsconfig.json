{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        }
    },
    "include": [
        "features/**/*.ts",
        "pages/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
} 